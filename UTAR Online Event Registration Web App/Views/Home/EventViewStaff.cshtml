@model IEnumerable<UTAR_Online_Event_Registration_Web_App.Models.EventDataModel>

@{
    ViewData["Title"] = "Event List";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container" id="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="EventViewStaff">UTAR_Online_Event_Registration_Web_App</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="EventViewStaff">Event List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="EventCreate">Create Event</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Log Out</a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
</header>
<body>
    <h1>@ViewData["id"]    @ViewData["name"]</h1>

    <h1>@ViewData["Title"]</h1>
    <p>
        <a asp-action="EventCreate">Create New Event</a>
    </p>
    <table class="table" id="table">
        <tr>
            <th>
                Event ID
            </th>
            <th>
                Event Name
            </th>
            <th>
                Event Date
            </th>
            <th>
                Event Price

            </th>
            <th>
                Event Ticket Quantity
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.eventID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.eventName)
                </td>
                <td>
                    @Convert.ToDateTime(item.eventDate).ToString("dddd, dd/MM/yyyy h:mm tt")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.eventPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.eventTicQty)
                </td>

                <td>
                    <a asp-action="EventEdit" asp-route-id="@item.eventID">Edit</a> |

                    <a asp-action="EventDelete" asp-route-id="@item.eventID">Delete</a>
                </td>
            </tr>
        }
    </table>
    </body>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css" />

@section scripts{

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        var strValue = "@((string)ViewBag.message)";
        if (strValue !== null && strValue !== "") {
            swal("", strValue, "success");
        }

    </script>

}
<style>
    body {
        background: #C9D6FF; /* fallback for old browsers */
        background: -webkit-linear-gradient(to top, #E2E2E2, #C9D6FF); /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to top, #E2E2E2, #C9D6FF); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    }
    #table {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #table td, #table th {
            border: 1px solid #414852;
            padding: 8px;
            font-size: large;
        }

        #table tr:hover {
            background-color: #ddd;
        }



        #table th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #04AA6D;
            color: white;
        }
    #container {
        padding: 15px 15px;
        font-size: x-large;
    }

    li.nav-item:hover {
        background-color: #ddd;
    }
</style>