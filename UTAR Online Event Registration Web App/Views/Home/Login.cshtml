@model UTAR_Online_Event_Registration_Web_App.Models.UserDataModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>

    <h1>Login</h1>

    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="userID" />
                <input type="hidden" asp-for="name" />
                <div class="form-group">
                    <label asp-for="email" class="control-label" ><b>Email</b></label>
                    <input asp-for="email" class="form-control" type="email" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password" class="control-label"><b>Password</b></label>
                    <input asp-for="password" class="form-control" type="password"/>
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="phonum" />
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>



    <div id="register">
        <a asp-action="Register">Register new account</a>
    </div>
</body>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css" />

@section scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        var strValue = "@((string)ViewBag.message)";
        if (strValue !== null && strValue == "Login Unsucessfully!") {
            swal({
                title: strValue,
                text: "Your email or password are incorrect! Please try again!",
                icon: "error",
            });
        }
        if (strValue !== null && strValue == "Register Sucessfully!"){
            swal({
                title: strValue,
                text: "Your account created sucessfully. Try to login.",
                icon: "success",
            });
        }

    </script>
}
<style>
    body {
        background: #ac9dcf; /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #E9E4F0, #ac9dcf); /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #E9E4F0, #ac9dcf); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

        padding-top: 150px;
    }

    label{
        font-size:large;
    }
    a {

        font-size: larger;
    }
   
</style>




